<div class="event-container">
  <h2>Participants à l’événement : <%= @event.title %></h2>

  <% if @attendances.any? %>
    <ul class="participants-list">
      <% @attendances.each do |attendance| %>
        <li>
          <%= attendance.user.first_name %> <%= attendance.user.last_name %> - <%= attendance.user.email %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="empty-message">Aucun participant pour le moment.</p>
  <% end %>

  <div style="margin-top: 2rem; display: flex; gap: 1rem;">
    <%= link_to 'Modifier l’événement', edit_event_path(@event), class: 'btn btn-edit' %>
    <%= button_to 'Supprimer l’événement', event_path(@event), method: :delete, data: { confirm: 'Es-tu sûr de vouloir supprimer cet événement ?' }, class: 'btn btn-delete' %>
  </div>
</div>

