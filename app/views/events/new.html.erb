<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <!-- üî¥ Affichage des erreurs -->
      <% if @event.errors.any? %>
        <div class="alert alert-danger">
          <h4 class="alert-heading"><%= pluralize(@event.errors.count, "erreur") %> ont emp√™ch√© l‚Äôenregistrement :</h4>
          <ul class="mb-0">
            <% @event.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="card shadow">
        <div class="card-body">
          <h1 class="card-title h4 mb-4 text-center">Cr√©er un nouvel √©v√©nement</h1>

          <%= form_with model: @event, local: true, multipart: true do |form| %>
            <div class="mb-3">
              <%= form.label :title, class: "form-label" %>
              <%= form.text_field :title, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :start_date, "Date de d√©but", class: "form-label" %>
              <%= form.text_field :start_date, type: "datetime-local", min: (Time.zone.now + 2.hours).strftime("%Y-%m-%dT%H:%M"), class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :duration, "Dur√©e (minutes)", class: "form-label" %>
              <%= form.number_field :duration, min: 5, step: 5, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :price, "Prix (‚Ç¨)", class: "form-label" %>
              <%= form.number_field :price, min: 0, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :location, "Lieu", class: "form-label" %>
              <%= form.text_field :location, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :description, class: "form-label" %>
              <%= form.text_area :description, rows: 5, class: "form-control" %>
            </div>

            <div class="mb-4">
              <%= form.label :picture, "Image de l'√©v√®nement", class: "form-label" %>
              <%= form.file_field :picture, class: "form-control" %>
            </div>

            <div class="text-center">
              <%= form.submit "Cr√©er", class: "btn btn-primary px-4" %>
            </div>
          <% end %>

        </div>
      </div>
      
    </div>
  </div>
</div>
