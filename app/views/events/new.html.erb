<% if @event.errors.any? %>
  <div class="alert alert-danger">
    <h4><%= pluralize(@event.errors.count, "erreur") %> empêchent cet enregistrement :</h4>
    <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<!-- Events Création -->
<h1>Créer un nouvel événement</h1>

<%= form_with model: @event, method: :post, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :start_date %>
    <%= form.text_field :start_date, type: "datetime-local", class: "form-control" %>
  </div>


  <div class="mb-3">
    <%= form.label :duration, "Durée (minutes)" %>
    <%= form.number_field :duration, class: "form-control", min: 1 %>
  </div>

  <div class="mb-3">
    <%= form.label :price, "Prix (€)" %>
    <%= form.number_field :price, class: "form-control", min: 0 %>
  </div>

  <div class="mb-3">
    <%= form.label :location %>
    <%= form.text_field :location, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", rows: 5 %>
  </div>

  <%= form.submit "Créer", class: "btn btn-primary" %>
<% end %>
