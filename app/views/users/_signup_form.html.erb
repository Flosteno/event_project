<div class="container d-flex justify-content-center align-items-center flex-column my-auto">

 <div class="card p-4 shadow" style="width: 350px;">

    <h3 class="mb-3 text-center">S'inscrire</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :email ,"Adresse email", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "Mot de passe", class: "form-label" %>
        <% if @minimum_password_length %>
          <small class="form-text">(<%= @minimum_password_length %> caractÃ¨res minimum)</small>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "Confirmation mot de passe", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="actions mb-3">
        <%= f.submit "s'inscrire",class: "btn btn-primary w-100"  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
 </div>
</div>