<div class="form-container">

  <h1>Profil de <%= @user.first_name %> <%= @user.last_name %></h1>

  <div class="form-group">
    <label>Email :</label>
    <p><%= @user.email %></p>
  </div>

  <div class="form-group">
    <label>Description :</label>
    <p><%= simple_format(@user.description || "Aucune description disponible.") %></p>
  </div>

  <div class="form-group" style="display: flex; flex-direction: column; gap: 0.5rem;">
    <%= link_to "Modifier email / mot de passe", edit_user_registration_path, class: "btn-edit" %>
    <%= link_to "Modifier nom / description", edit_user_path(@user), class: "btn-edit" %>
  </div>
</div>

<div class="form-container">

  <h2>Événements créés</h2>

  <% if @user.admin_events.any? %>
    <ul>
      <% @user.admin_events.each do |event| %>
        <li>
          <%= link_to event.title, event_path(event), style: "color: #e91e63; font-weight: bold;" %>
          <small style="color: #7f8c8d;">(le <%= event.start_date.strftime("%d/%m/%Y") %>)</small>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="form-text">Aucun événement créé pour le moment.</p>
  <% end %>
</div>

<div class="form-container">

  <h2>Événements suivis</h2>

  <% if @user.attended_events.any? %>
    <ul>
      <% @user.attended_events.each do |event| %>
        <li>
          <%= link_to event.title, event_path(event), style: "color: #e91e63; font-weight: bold;" %>
          <small style="color: #7f8c8d;">(le <%= event.start_date.strftime("%d/%m/%Y") %>)</small>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="form-text">Aucun événement suivi pour le moment.</p>
  <% end %>
</div>
